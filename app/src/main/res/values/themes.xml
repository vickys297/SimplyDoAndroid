<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimplyDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Widget.AppCompat.Toolbar." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">#ffffff</item>
        <item name="titleTextColor">@color/purple_500</item>
        <item name="elevation">10dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Widget.AppCompat.Button." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/button_background</item>
    </style>

    <style name="ButtonAddMoreDetails" parent="Theme.MaterialComponents.DayNight">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="PrimaryButton" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="DateViewSmall" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@drawable/small_date_view</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ToolbarStyledText" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#777777</item>
    </style>

</resources>