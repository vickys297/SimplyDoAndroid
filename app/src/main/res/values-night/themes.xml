<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimplyDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CardView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cardBackgroundColor">#2B2B2B</item>
    </style>

    <style name="Widget.AppCompat.TextView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">#737373</item>
    </style>

    <style name="androidx.appcompat.widget.Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">#000000</item>
        <item name="titleTextColor">#ffffff</item>
    </style>


    <style name="Widget.AppCompat.Button." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="background">@drawable/button_background</item>
        <item name="android:textSize">50sp</item>

    </style>

    <style name="Widget.AppCompat.ImageButton." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@drawable/button_background</item>
        <item name="android:layout_width">500dp</item>
    </style>

    <style name="ButtonAddMoreDetails" parent="Theme.MaterialComponents.DayNight">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryButton" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">68dp</item>
    </style>

    <style name="PrimaryButtonOptional" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@drawable/button_optional_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">68dp</item>
    </style>

    <style name="ToolbarStyledText" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#777777</item>
    </style>


    <!--Calender Recycler Item Styles-->
    <style name="DateTimeView" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@drawable/small_date_time_view_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextDay">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextMonth">
        <item name="android:textColor">@color/purple_500</item>
    </style>
    <!--Calender Recycler Item Styles-->


</resources>