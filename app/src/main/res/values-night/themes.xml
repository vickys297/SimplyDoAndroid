<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimplyDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">#FF121212</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CardView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cardBackgroundColor">#2B2B2B</item>
    </style>

    <style name="Widget.AppCompat.TextView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="androidx.appcompat.widget.Toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">#000000</item>
        <item name="titleTextColor">#ffffff</item>
    </style>


    <style name="Widget.AppCompat.Button." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="background">@drawable/button_background</item>
        <item name="android:textSize">50sp</item>

    </style>

    <style name="Widget.AppCompat.ImageButton." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="background">@drawable/button_background</item>
        <item name="android:layout_width">500dp</item>
    </style>

    <style name="ButtonOptions" parent="Theme.MaterialComponents.DayNight">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">68dp</item>

        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SmallButtonOptions" parent="Theme.MaterialComponents.DayNight">
